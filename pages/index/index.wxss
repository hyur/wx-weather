.weather-wrapper{
  padding-top:20rpx;
  padding-bottom: 250rpx;
  position:relative;
}
/*位置  */
.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
}
.location{
  display: flex;
  align-items: center;
  justify-content:center;
}
.location-test{
  opacity: 0.5;
}
.location-tips{
  text-align: center;
  margin-top:10rpx;
  opacity: 0.5;
  height:42rpx;
}
.location-icon{
  margin-right:10rpx;
  width:21rpx;
  height:30rpx;
}
.temp{
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  color: rgba(0,0,0,0.9);
  opacity: 0.8;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  color: rgba(0,0,0,0.9);
}
.weather-bg{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index: -1;
}
.timetips{
  display: flex;
  justify-content:center;
  align-items:center;
  margin-top:40rpx;
}
.timetips-icon{
  width:36rpx;
  height:28rpx;
  margin-right:10rpx;
}
.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast_list{
  width:100%;  
  display: flex; 
  margin-top:40rpx;
  } 
.forecast_item{ 
  width: 160rpx; 
   height: 290rpx;    
  display: flex;  
  flex-direction: column;
  flex-shrink:0;
  align-items:center;
  } 
.forecast_item_time{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.7;
}
.forecast_item_img{ 
  width: 60rpx; 
  height: 60rpx;
  margin-top:50rpx;
}
.forecast_item_temp{
  margin-top:42rpx;
  font-size: 35rpx;
  line-height: 52rpx;
  opacity: 0.6;
}
/*今日天气 */
.day-weather{
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  left:40rpx;
  right:40rpx;
  height:90rpx;
  border-top:1rpx solid rgba(0,0,0,0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.temp-text{
  flex-grow:1;
  padding-right: 30rpx;
   text-align: right; 
}
.arrow-icon{
  width:13rpx;
  height:24rpx;
}

