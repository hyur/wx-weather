.weather-wrapper{
  padding-top:174rpx;
  padding-bottom: 250rpx;
  /* background-image: -webkit-linear-gradient(-90deg,#3bbcff,#4af4ff); */
  position:relative;
}
.temp{
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  color: rgba(0,0,0,0.9);
  opacity: 0.8;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  color: rgba(0,0,0,0.9);
}
.weather-bg{
  position: absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  z-index: -1;
}
.timetips{
  display: flex;
  justify-content:center;
  align-items:center;
  margin-top:40rpx;
}
.timetips-icon{
  width:36rpx;
  height:28rpx;
  margin-right:10rpx;
}
.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast_list{
  width:100%;  
  display: flex; 
  margin-top:40rpx;
  } 
.forecast_item{ 
  width: 160rpx; 
   height: 290rpx;    
  display: flex;  
  flex-direction: column;
  flex-shrink:0;
  align-items:center;
  } 
.forecast_item_time{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.7;
}
.forecast_item_img{ 
  width: 60rpx; 
  height: 60rpx;
  margin-top:50rpx;
}
.forecast_item_temp{
  margin-top:45rpx;
  font-size: 40rpx;
  line-height: 52rpx;
  opacity: 0.7;
}

